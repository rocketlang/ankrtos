{
  "_meta": {
    "description": "ANKR Service Registry - References ports.json via portPath (NO hardcoding)",
    "version": "2.0.0",
    "portsFile": "./ports.json"
  },
  "services": {
    "ankr-hybrid-search": {
      "portPath": "services.ankr-hybrid-search.port",
      "path": "/root",
      "command": "/root/.bun/bin/bun /root/ankr-hybrid-search-service.js",
      "description": "Hybrid Search API (File Index + Vector)",
      "healthEndpoint": "/health",
      "enabled": true,
      "interpreter": "bun",
      "interpreterPath": "/root/.bun/bin/bun",
      "runtime": "bun",
      "runtimeVersion": "1.3.9"
    },
    "ankr-interact": {
      "portPath": "dashboard.viewer",
      "path": "/root/ankr-labs-nx/packages/ankr-interact",
      "command": "/root/.bun/bin/bun src/server/index.ts",
      "description": "ANKR Interact - Documentation Browser & Knowledge Graph",
      "healthEndpoint": "/api/health",
      "enabled": true,
      "interpreter": "bun",
      "interpreterPath": "/root/.bun/bin/bun",
      "runtime": "bun",
      "runtimeVersion": "1.3.9",
      "_note": "Using bun for TypeScript - removed --watch flag for stability"
    },
    "vyomo-algo": {
      "portPath": "ai.vyomoBlackbox",
      "path": "/root/vyomo-algo-blackbox",
      "command": "bun run src/server.ts",
      "description": "Vyomo Blackbox - Trading Algorithms API",
      "healthEndpoint": "/health",
      "enabled": true,
      "interpreter": "bun",
      "interpreterPath": "/root/.bun/bin/bun",
      "runtime": "bun",
      "runtimeVersion": "1.3.9",
      "domain": "vyomo.in"
    },
    "vyomo-download": {
      "portPath": "ai.vyomoDownload",
      "path": "/root",
      "command": "/root/.bun/bin/bun /root/vyomo-download-api.js",
      "description": "Vyomo Download API - Package Distribution",
      "healthEndpoint": "/health",
      "enabled": true,
      "interpreter": "bun",
      "interpreterPath": "/root/.bun/bin/bun",
      "runtime": "bun",
      "runtimeVersion": "1.3.9",
      "domain": "vyomo.in"
    },
    "edibox-backend": {
      "portPath": "backend.edibox",
      "path": "/root",
      "command": "/bin/bash /root/edibox-backend-start.sh",
      "description": "EDIBox Backend - BAPLIE Parser & Ship Stability API",
      "healthEndpoint": "/health",
      "enabled": true,
      "interpreter": "bash",
      "interpreterPath": "/bin/bash",
      "runtime": "tsx",
      "runtimeVersion": "4.21.0",
      "database": "edibox"
    },
    "complymitra-api": {
      "portPath": "backend.complymitra",
      "path": "/root/ankr-labs-nx/apps/complymitra-api",
      "command": "npx tsx src/index.ts",
      "description": "ComplyMitra - Compliance Management API",
      "healthEndpoint": "/health",
      "enabled": true,
      "interpreter": "node",
      "interpreterPath": "/usr/bin/node",
      "runtime": "tsx",
      "runtimeVersion": "4.21.0",
      "domain": "complymitra.com"
    },
    "mari8x-backend": {
      "portPath": "backend.ankrMaritime",
      "path": "/root/apps/ankr-maritime/backend",
      "command": "npx tsx src/main.ts",
      "description": "Mari8X Backend - Maritime Operations & Analytics API",
      "healthEndpoint": "/health",
      "enabled": true,
      "interpreter": "node",
      "interpreterPath": "/usr/bin/node",
      "runtime": "tsx",
      "runtimeVersion": "4.21.0",
      "domain": "mari8x.com",
      "database": "mari8x"
    },
    "mari8x-frontend": {
      "portPath": "frontend.ankrMaritime",
      "path": "/root/apps/ankr-maritime/frontend",
      "command": "npm run dev",
      "description": "Mari8X Frontend - Maritime Operations Dashboard",
      "healthEndpoint": null,
      "enabled": true,
      "interpreter": "node",
      "interpreterPath": "/usr/bin/node",
      "runtime": "vite",
      "runtimeVersion": "6.x",
      "domain": "mari8x.com",
      "_note": "React + Vite frontend"
    },
    "ankr-maritime-watcher": {
      "portPath": null,
      "path": "/root/apps/ankr-maritime",
      "command": "ankr-publish-watch watch --dirs /root/apps/ankr-maritime --scan-existing",
      "description": "ANKR Maritime - File Watcher & Auto-Publisher",
      "healthEndpoint": null,
      "enabled": false,
      "interpreter": "bash",
      "interpreterPath": "/bin/bash",
      "runtime": "node",
      "runtimeVersion": "20.x",
      "_note": "File watcher service - no HTTP endpoint, managed separately (PID 2779)"
    }
  }
}
