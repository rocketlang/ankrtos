{
  "name": "@ankr/resilience",
  "version": "1.0.0",
  "description": "Enterprise resilience patterns: Circuit Breaker, Retry with exponential backoff, Graceful Shutdown",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./circuit-breaker": {
      "require": "./dist/circuit-breaker.js",
      "import": "./dist/circuit-breaker.mjs",
      "types": "./dist/circuit-breaker.d.ts"
    },
    "./retry": {
      "require": "./dist/retry.js",
      "import": "./dist/retry.mjs",
      "types": "./dist/retry.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "circuit-breaker",
    "retry",
    "resilience",
    "fault-tolerance",
    "exponential-backoff",
    "graceful-shutdown",
    "fintech",
    "enterprise"
  ],
  "author": "ANKR Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ankr-technologies/ankr-packages.git",
    "directory": "packages/resilience"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
