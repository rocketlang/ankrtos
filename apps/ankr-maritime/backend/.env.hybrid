# Mari8X Hybrid DMS Configuration
# Copy to .env and customize

# === Existing Config ===
DATABASE_URL=postgresql://postgres:password@localhost:5432/ankr_maritime
JWT_SECRET=your-jwt-secret-here
NODE_ENV=development
PORT=4000

# === Hybrid DMS Config ===

# Mode: 'dev' or 'prod'
DMS_MODE=dev

# Storage - MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=mari8x
MINIO_SECRET_KEY=mari8x_secure_2026
MINIO_BUCKET=maritime-docs
MINIO_REGION=us-east-1

# Embeddings
# Dev: Ollama (free), Prod: Voyage AI (cheap)
EMBEDDINGS_PROVIDER=ollama  # 'ollama' or 'voyage'
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
VOYAGE_API_KEY=pa-IZUdnDHSHAErlmOHsI2w7EqwbIXBxLEtgiE2pB2zqLr

# LLM
# Dev: Ollama (free), Prod: Groq (cheap)
LLM_PROVIDER=ollama  # 'ollama' or 'groq' or 'openai'
OLLAMA_LLM_MODEL=qwen2.5:14b
GROQ_API_KEY=your-groq-key-here
GROQ_MODEL=llama-3.1-70b-versatile

# OCR
OCR_ENABLED=true
OCR_PROVIDER=tesseract  # 'tesseract' (free) or 'google' or 'aws'
OCR_LANGUAGES=eng

# Search
SEARCH_PROVIDER=postgres  # PostgreSQL FTS + pgvector
ENABLE_VECTOR_SEARCH=true
ENABLE_HYBRID_SEARCH=true  # Combine text + vector search

# RAG
ENABLE_RAG=true
ENABLE_RAG_AUTO_INDEX=true
RAG_CACHE_TTL=300  # 5 minutes
RAG_MAX_CONTEXT_DOCS=5
RAG_CONFIDENCE_THRESHOLD=0.5

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=300

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
BACKUP_PATH=/mnt/backup/maritime-docs
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_MINIO_VERSIONING=true
ENABLE_OCR_QUEUE=true
ENABLE_EMBEDDING_QUEUE=true
